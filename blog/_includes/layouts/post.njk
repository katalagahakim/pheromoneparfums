---
layout: layouts/base.njk
---

<div class="hero">
    <div class="container">
        <h1>{{ title }}</h1>
        <p class="subheadline">{{ description }}</p>
        
        <div class="rating">
            <div class="stars">★★★★☆</div>
            <p><strong>Our Rating: {{ rating }}/5</strong></p>
            <p style="font-size: 0.9em;">Based on independent analysis of user reports</p>
        </div>
        
        <a href="#" class="cta-button" target="_blank">Check Current Price<span class="external-link">↗</span></a>
        
        <p class="disclaimer">
            Disclosure: We may receive a commission if you purchase through our links, but this never affects our reviews or rankings.
        </p>
    </div>
</div>

<div class="container">
    <div class="section">
        <div class="review-meta">
            <p><strong>Review Date:</strong> {{ page.date | readableDate }} | <strong>Last Updated:</strong> {{ page.date | readableDate }}</p>
            <p><strong>Product Reviewed:</strong> {{ title }}</p>
        </div>
        
        {{ content | safe }}
    </div>
</div>
